<div class="container" style="margin-top:40px; width:60%">
  <div class="card w-100" style="box-shadow:2px 2px 6px dimgray;">
    <div class="card-body">
      <h4 class="card-title"> Recipe name: <%= rec.rec_nm %></h4>
      <p class="card-text">
      <form action="/showDescription/<%= rec._id %>/comments/<%= comment._id %>" method="POST">
        <div class="form-group">
          <textarea name="description" rows="8" cols="80" ><%= comment.description %></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-success btn-sm" name="button">Submit <span class="glyphicon glyphicon-comment" aria-hidden="true"></span></button>
        </div>
      </form></p>
      </div>
  </div>
</div>
